    <!-- CHART  -->
    <script>

        // CHART FOR SALES DATA
        const ctx = document.getElementById('myChart');
        function getSalesData() {
            const salesDataInput = document.getElementById('salesData');
            if (salesDataInput) {
                const salesData = JSON.parse(salesDataInput.value);
                return salesData;
            }
            return [];
        }

        const salesData = getSalesData();

        const chartLabels = salesData.map(item => item.date);
        const chartValues = salesData.map(item => item.totalSales);

        new Chart(ctx, {
        type: 'bar',
        data: {
            labels: chartLabels,
            datasets: [{
            label: 'Sales',
            data: chartValues,
            borderWidth: 1
            }]
        },
        options: {
            scales: {
            y: {
                beginAtZero: true
            }
            }
        }
        });

        // CHART FOR TOP CATEGORY ON SALES
        const ctx2 = document.getElementById('myChartCategory');
        function getSalesCategory() {
            const categoryDataInput = document.getElementById('categoryData');
            if (categoryDataInput) {
                const categoryData = JSON.parse(categoryDataInput.value);
                return categoryData;
            }
            return [];
        }

        const salesCategory = getSalesCategory();

        const chartLabelsCategory = salesCategory.map(item => item.category);
        const chartValuesCategory = salesCategory.map(item => item.totalOrders);

        new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: chartLabelsCategory,
            datasets: [{
            label: '',
            data: chartValuesCategory,
            backgroundColor: [
                'rgba(255, 99, 132, 0.5)',
                'rgba(54, 162, 235, 0.5)',
                'rgba(255, 206, 86, 0.5)',
                // Add more colors as needed
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                // Add more colors as needed
            ],
            borderWidth: 1,
            }],
        },
        options: {
            responsive: true,
            plugins: {
            legend: {
                position: 'top',
            },
            title: {
                display: true,
                text: '',
            },
            },
        },
        });

        
    </script>

