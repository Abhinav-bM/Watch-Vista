      }
    </style>
  </head>

  <body>
    <div class="signup-container">
      <!-- <img src="https://see.fontimg.com/api/renderfont4/owrrV/eyJyIjoiZnMiLCJoIjo0MCwidyI6MTI1MCwiZnMiOjMyLCJmZ2MiOiIjMDAwMDAwIiwiYmdjIjoiI0ZGRkZGRiIsInQiOjF9/TUVHWA/black-romero-demo.png" alt="logo" class="logo"> -->
      <br />
      <br />

      <h2 class="text-center mb-4">Vendor Login</h2>

      <form
        action="/vendor/login"
        method="post"
        onsubmit="return validateAndSubmit()"
      >
        <% if (typeof error !== 'undefined' && error !== null) { %>
        <p style="color: red"><%= error %></p>
        <% } %>

        <div>
          <small id="email-error" style="color: red; display: none"
            >Invalid email</small
          >
          <input
            type="email"
            name="email"
            id="email"
            class="form-control my-2 py-2"
            placeholder="email..."
          />

          <small id="password-error" style="color: red; display: none"
            >Invalid password</small
          >
          <input
            type="password"
            name="password"
            id="password"
            class="form-control my-2 py-2"
            placeholder="Password..."
          />

          <div class="text-center">
            <small
              ><a href="/venodor/forgotPassword">Forgot password ?</a></small
            ><br />
            <small><a href="/vendor/register">New vendor ?</a></small>
          </div>

          <button class="mt-3 btn btn-primary btn-block" type="submit">
            Login
          </button>
        </div>
      </form>

      <script>
        function validateAndSubmit() {
          var emailInput = document.getElementById("email");
          var passwordInput = document.getElementById("password");

          var emailError = document.getElementById("email-error");
          var passwordError = document.getElementById("password-error");

          var isvalidEmail = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(
            emailInput.value
          );
          var isvalidPassword = passwordInput.value.length >= 6;

          // Show/hide error messages based on validation
          emailError.style.display = isvalidEmail ? "none" : "block";
          passwordError.style.display = isvalidPassword ? "none" : "block";

          // Return false if any validation fails to prevent form submission
          if (!isvalidEmail || !isvalidPassword) {
            return false;
          }

          return true;
        }
      </script>

      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </div>
  </body>
</html>
