      <h2 class="text-center mb-4">Vendor Register</h2>

      <form
        action="/vendor/register"
        method="post"
        onsubmit="return validateAndSubmit()"
      >
        <div class="text-start">
          <label for="name" class="m-0"
            ><strong>Name <span class="text-danger">**</span></strong></label
          ><br />
          <small id="name-error" style="color: red"></small>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control my-2 py-2"
            placeholder="Enter your name..."
          />

          <label for="email" class="m-0"
            ><strong>Email <span class="text-danger">**</span></strong></label
          ><br />
          <small id="email-error" style="color: red"></small>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control my-2 py-2"
            placeholder="Enter your email..."
          />

          <label for="phone" class="m-0"
            ><strong>Phone <span class="text-danger">**</span></strong></label
          ><br />
          <small id="phone-error" style="color: red"></small>
          <input
            type="text"
            name="phone"
            id="phone"
            class="form-control my-2 py-2"
            placeholder="Enter your phone..."
          />

          <label for="password" class="m-0"
            ><strong
              >Password <span class="text-danger">**</span></strong
            ></label
          ><br />
          <small id="password-error" style="color: red"></small>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control my-2 py-2"
            placeholder="Enter your password..."
          />

          <button class="mt-3 btn btn-primary btn-block" type="submit">
            Register
          </button>
        </div>
      </form>

      <script>
        function validateAndSubmit() {



          var nameInput = document.getElementById("name");
          var emailInput = document.getElementById("email");
          var phoneInput = document.getElementById("phone");
          var passwordInput = document.getElementById("password");

          var nameError = document.getElementById("name-error");
          var emailError = document.getElementById("email-error");
          var phoneError = document.getElementById("phone-error");
          var passwordError = document.getElementById("password-error");

          nameError.textContent = ''
          emailError.textContent = ''
          phoneError.textContent = ''
          passwordError.textContent = ''

          if (nameInput.value === "") {
            nameError.textContent = "Please fill the field";
            return false;
          }
          if (emailInput.value === "") {
            emailError.textContent = "Please fill the field";
            return false;
          }
          if (phoneInput.value === "") {
            phoneError.textContent = "Please fill the field";
            return false;
          }
          if (passwordInput.value === "") {
            passwordError.textContent = "Please fill the field";
            return false;
          }

          var isValidName = /^[a-zA-Z\s]{3,}$/.test(nameInput.value);
          var isvalidEmail = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(
            emailInput.value
          );
          var isvalidPhone = /^(\+91)?\d{10}$/.test(phoneInput.value);
          var isvalidPassword = passwordInput.value.length >= 6;

          // Show/hide error messages based on validation
          if (!isValidName) {
            nameError.textContent = "Invalide name";
          }
          if (!isvalidEmail) {
            emailError.textContent = "Invalid email";
          }
          if (!isvalidPhone) {
            phoneError.textContent = "Invalid phone";
          }
          if (!isvalidPassword) {
            passwordError.textContent = "Invalid phone";
          }
          // Return false if any validation fails to prevent form submission
          if (
            !isValidName ||
            !isvalidEmail ||
            !isvalidPhone ||
            !isvalidPassword
          ) {
            return false;
          }

          return true;
        }
      </script>
