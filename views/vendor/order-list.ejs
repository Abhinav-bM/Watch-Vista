<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Orders List </title>
    <link rel="icon" href="favicon.ico" type="image/x-icon"> <!-- Favicon-->

    <!-- plugin css file  -->
    <link rel="stylesheet" href="/vendor/assets/plugin/datatables/responsive.dataTables.min.css">
    <link rel="stylesheet" href="/vendor/assets/plugin/datatables/dataTables.bootstrap5.min.css">

    <!-- project css file  -->
    <link rel="stylesheet" href="/vendor/assets/css/ebazar.style.min.css">
</head>
<body>
    <div id="ebazar-layout" class="theme-blue">                          
        
        <!-- sidebar -->
        <div class="sidebar px-4 py-4 py-md-4 me-0">
            <div class="d-flex flex-column h-100">
                <a href="index.html" class="mb-0 brand-icon">
                    <span class="logo-icon">
                        <i class="bi bi-bag-check-fill fs-4"></i>
                    </span>
                    <span class="logo-text"><%= vendor.vendorName %></span>
                </a>
                <!-- Menu: main ul -->
                <ul class="menu-list flex-grow-1 mt-3">
                    <li>
                        <a class="m-link" href="/vendor/dashboard"
                          ><i class="icofont-home fs-5"></i> <span>Dashboard</span></a
                        >
                      </li>
          
                      <li>
                        <a class="m-link" href="/vendor/productList"
                          ><i class="icofont-truck-loaded fs-5"></i>Products</a
                        >
                      </li>
                      <li>
                        <a class="m-link" href="/vendor/addProduct"
                          ><i class="icofont-truck-loaded fs-5"></i>Add Product</a
                        >
                      </li>
                      <li>
                        <a class="m-link active" href="/vendor/orders"
                          ><i class="icofont-notepad"></i> <span>Orders</span></a
                        >
                      </li>
          
                      <li>
                        <a class="m-link" href="/vendor/returnRepayment"
                          ><i class="icofont-notepad"></i>
                          <span>Return & Repayment</span></a
                        >
                      </li>
                </ul>
               
            </div>
        </div>       

        <!-- main body area -->
        <div class="main px-lg-4 px-md-4"> 

            <!-- Body: Header -->
            <div class="header">
                <nav class="navbar py-4">
                    <div class="container-xxl">
        
                        <!-- header rightbar icon -->
                        <div class="h-right d-flex align-items-center mr-5 mr-lg-0 order-1">
                            

                            <div class="dropdown user-profile ml-2 ml-sm-3 d-flex align-items-center zindex-popover">
                                <div class="u-info me-2">
                                    <p class="mb-0 text-end line-height-sm "><span class="font-weight-bold"><%= vendor.vendorName %></span></p>
                                </div>
                                <a class="nav-link dropdown-toggle pulse p-0" href="#" role="button" data-bs-toggle="dropdown" data-bs-display="static">
                                    <img class="avatar lg rounded-circle img-thumbnail" src="/vendor/assets/images/profile_av.svg" alt="profile">
                                </a>
                                <div class="dropdown-menu rounded-lg shadow border-0 dropdown-animation dropdown-menu-end p-0 m-0">
                                    <div class="card border-0 w280">
                                        <div class="card-body pb-0">
                                            <div class="d-flex py-1">
                                                <img class="avatar rounded-circle" src="/vendor/assets/images/profile_av.svg" alt="profile">
                                                <div class="flex-fill ms-3">
                                                    <p class="mb-0"><span class="font-weight-bold"><%= vendor.vendorName %></span></p>
                                                    <small class=""><%= vendor.email %></small>
                                                </div>
                                            </div>
                                            
                                            <div><hr class="dropdown-divider border-dark"></div>
                                        </div>
                                        <div class="list-group m-2 ">
                                            <a
                                            href="/vendorProfile"
                                            class="list-group-item list-group-item-action border-0"
                                            ><i class="icofont-ui-user fs-5 me-3"></i>Profile
                                            Page</a
                                          >
                                          <a
                                            href="/vendor/logout"
                                            class="list-group-item list-group-item-action border-0"
                                            ><i class="icofont-logout fs-5 me-3"></i>Signout</a
                                          >
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="setting ms-2">
                                <a href="#" data-bs-toggle="modal" data-bs-target="#Settingmodal"><i class="icofont-gear-alt fs-5"></i></a>
                            </div>
                        </div>
        
                     
        
                        <!-- main menu Search-->
                        <div class="order-0 col-lg-4 col-md-4 col-sm-12 col-12 mb-3 mb-md-0 ">
                            <div class="input-group flex-nowrap input-group-lg">
                                <input type="search" class="form-control" placeholder="Search" aria-label="search" aria-describedby="addon-wrapping">
                                <button type="button" class="input-group-text" id="addon-wrapping"><i class="fa fa-search"></i></button>
                                
                            </div>
                        </div>
        
                    </div>
                </nav>
            </div>

            <!-- Body: Body -->
            <div class="body d-flex py-3">  
                <div class="container-xxl"> 
                    <div class="row align-items-center"> 
                        <div class="border-0 mb-4"> 
                            <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                                <h3 class="fw-bold mb-0">Orders List</h3>
                            </div>
                        </div>
                    </div> <!-- Row end  -->
                    <div class="row g-3 mb-3"> 
                        <div class="col-md-12">
                            <div class="card"> 
                                <div class="card-body"> 
                                    <!--ORDER LIST TABLE STARTS-->
                               
                                    <table id="myDataTable" class="table table-hover align-middle mb-0" style="width: 100%;">  
                                        <thead>
                                          <tr>
                                            <th>Order ID</th>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>color</th>
                                            <th>Status</th>
                                            <th>View Details</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% vendorOrders.forEach((order, index) => { %>
                                            <tr>
                                              <td><%= order.orderId %></td>
                                              <td><%= order.productName %></td>
                                              <td><%= order.quantity %></td>
                                              <td><%= order.price %></td>
                                              <td><%= order.color %></td>

                                              <td>
                                                <form id="updateOrderForm-<%= order.orderId %>-<%= index %>" method="POST">
                                                    <select name="status" class="form-select" onchange="updateOrderStatus(event, '<%= order.orderId %>', '<%= order.productId %>', '<%= index %>')">
                                                      <option value="Pending" <%= order.orderStatus === "Pending" ? "selected" : "" %>>Pending</option>
                                                      <option value="Processing" <%= order.orderStatus === "Processing" ? "selected" : "" %>>Processing</option>
                                                      <option value="Shipped" <%= order.orderStatus === "Shipped" ? "selected" : "" %>>Shipped</option>
                                                      <option value="Delivered" <%= order.orderStatus === "Delivered" ? "selected" : "" %>>Delivered</option>
                                                      <option value="Requested for Cancellation" <%= order.orderStatus === "Requested for Cancellation" ? "selected" : "" %>>Requested for Cancellation</option>
                                                      <option value="Cancelled" <%= order.orderStatus === "Cancelled" ? "selected" : "" %>>Cancelled</option>
                                                    </select>
                                                </form>
                                            </td>

                                              <td>
                                                <!-- Eye icon button to view details -->
                                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#orderModal<%= order.orderId %>-<%= order.productId %>">
                                                  <i class="fas fa-eye"></i> View
                                                </button>
                                              </td>
                                            </tr>
                                            <!-- Modal for order details -->
                                            <div class="modal fade" id="orderModal<%= order.orderId %>-<%= order.productId %>" tabindex="-1" aria-labelledby="orderModalLabel<%= order.orderId %>-<%= order.productId %>" aria-hidden="true">
                                              <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title" id="orderModalLabel<%= order.orderId %>-<%= order.productId %>">Order Details</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                  </div>
                                                  <div class="modal-body">
                                                    <!-- Order details here -->
                                                    <p><strong>Order ID:</strong> <%= order.orderId %></p>
                                                    <p><strong>Item:</strong> <%= order.productName %></p>
                                                    <p><strong>Quantity:</strong> <%= order.quantity %></p>
                                                    <p><strong>Price:</strong> <%= order.price %></p>
                                                    <p><strong>Total:</strong> <%= order.quantity * order.price %></p>
                                                    <p><strong>Order Date:</strong> <%= order.orderDate %></p>
                                                    <p><strong>Status:</strong> <%= order.orderStatus %></p>
                                                    <p><strong>Shipping Address:</strong> <%= order.shippingAddress.name %>, <%= order.shippingAddress.address %> <%= order.shippingAddress.district %>, <%= order.shippingAddress.state %>, <%= order.shippingAddress.zip %>, <%= order.shippingAddress.phone %>, </p>
                                                    <!-- Add more order details as needed -->
                                                    <% if (order.orderStatus === "Requested for Cancellation") { %>
                                                        <p><strong>Cancellation Reason:</strong> <%= order.cancelReason %></p>
                                                    <% } %>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                          <% }) %>
                                        </tbody>
                                      </table>
                                    <!-- ORDER LIST TABLE ENDS -->
                                </div>
                            </div>
                        </div>
                    </div> <!-- Row end  -->
                </div>
            </div>
        
      
            
        </div>                                 

    </div> 

    <!-- Jquery Core Js -->
    <script src="/vendor/assets/bundles/libscripts.bundle.js"></script>

    <!-- Plugin Js -->
    <script src="/vendor/assets/bundles/dataTables.bundle.js"></script>  

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        function updateOrderStatus(event, orderId, productId, index) {
            event.preventDefault(); // Prevent default form submission
            console.log(orderId, productId);

            const form = document.querySelector(`#updateOrderForm-${orderId}-${index}`);
            const status = form.querySelector('select[name="status"]').value;

            axios.post(`/vendor/updateOrderStatus/${orderId}/${productId}`, { status })
                .then(response => {
                    // Handle success response, if needed
                    console.log(response.data);
                })
                .catch(error => {
                    // Handle error response, if needed
                    console.error(error);
                });
        }
      
    </script>

    <!-- Jquery Page Js -->
    <script src="../js/template.js"></script>
    <script>
        $('#myDataTable')
        .addClass( 'nowrap')
        .dataTable( {
            responsive: true,
            columnDefs: [
                { targets: [-1, -3], className: 'dt-body-right' }
            ]
        });
    </script>
</body>

