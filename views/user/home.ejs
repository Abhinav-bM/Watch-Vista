    <script>
      function addToWishlist(event, productId) {
        event.preventDefault();
        axios
          .post("/products/addToWishlist", { productId })
          .then((response) => {
            console.log(response);
            // Get the corresponding heart icon element
            const heartIcon = document.getElementById(`heartIcon-${productId}`);
            // Check if the product was added or removed from wishlist
            if (
              response.data.message === "Product added to wishlist successfully"
            ) {
              heartIcon.classList.remove("fal");
              heartIcon.classList.add("fas");
              heartIcon.classList.add("text-danger");

              let wishlistCount = document.getElementById('wishlistCount')
              let count = parseFloat(wishlistCount.textContent)
              wishlistCount.textContent = count +=1

              Toastify({
                text: "Product added to wishlist",
                duration: 2000,
                gravity: "top",
                position: "right",
                backgroundColor: "black",
              }).showToast();
            } else if (
              response.data.message ===
              "Product removed from wishlist successfully"
            ) {
              // Change heart icon to regular red heart
              heartIcon.classList.remove("fas");
              heartIcon.classList.remove("text-danger");
              heartIcon.classList.add("fal");
              let wishlistCount = document.getElementById('wishlistCount')
              let count = parseFloat(wishlistCount.textContent)
              wishlistCount.textContent = count -=1
              Toastify({
                text: "Product removed from wishlist",
                duration: 2000,
                gravity: "top",
                position: "right",
                backgroundColor: "black",
              }).showToast();
            }
          })
          .catch((error) => {
            console.log("sjfjskf", error);
            if (error.response.data.error === "User not found") {
              Toastify({
                text: "Please login for wishlisting a product",
                duration: 3000,
                gravity: "top",
                position: "right",
                backgroundColor: "black",
              }).showToast();
            }
          });
      }
    </script>

