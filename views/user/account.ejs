                    console.error("Error updating address:", error);
                });
            });
        }
          
    }
    // EVENT LISTENER FOR EDIT ADDRESS BUTTON USING CLOSER PARENT ELEMENT
    document.getElementById("addressList").addEventListener("click", function(event) {
