  <body>
    <div class="signup-container">
      <div class="text-center">
        <img class="pb-5" src="/img/logo/logo1.png" alt="" style="max-width: 160px" />
      </div>

      <form
      action="/loginOtpDone"
      method="post"
      onsubmit="return validate()"
    >
             <% if (typeof error !== 'undefined' && error !== null)
      { %>
      <p style="color: red"><%= error %></p>
            <% } %>
      <input
        type="hidden"
        name="phoneNumber"
        value="<%= phone %>"
      />

      <label for="otp">OTP <span>**</span></label>
      <p id="errMessage" style="color: red"></p>
      <input
        id="otp"
        name="otp"
        class="form-control my-0 mb-4 py-2"
        type="text"
        placeholder="Enter otp..."
      />

      <button class="btn btn-primary btn-block">Log In</button><br />
    </form>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function validate() {
          var otpInput = document.getElementById("otp").value;

          var errMessage = document.getElementById("errMessage");

          if (otpInput.length !== 6) {
            errMessage.textContent = "Enter the 6 digit otp";
            return false;
          } else {
            return true;
          }
        }
      </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
